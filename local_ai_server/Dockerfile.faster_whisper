FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    pkg-config \
    libsndfile1-dev \
    libasound2-dev \
    portaudio19-dev \
    libffi-dev \
    libssl-dev \
    sox \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements_faster_whisper.txt requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY main_faster_whisper.py main.py
COPY *.py ./

# Create models directory
RUN mkdir -p /app/models/stt/faster_whisper
RUN mkdir -p /app/models/llm
RUN mkdir -p /app/models/tts

# Set environment variables
ENV STT_PROVIDER=faster_whisper
ENV FASTER_WHISPER_MODEL=base
ENV PORT=8765

# Expose port
EXPOSE 8765

# Run the application
CMD ["python", "main.py"]
